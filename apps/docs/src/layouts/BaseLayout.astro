---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A lightweight, accessible, design-tokenâ€“driven UI component library using Web Components (Lit)' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Import Bootstrap AI styles -->
    <link rel="stylesheet" href="https://cdn.tailwindcss.com/3.4.0">
    <style>
      /* Import Bootstrap AI core styles */
      @import url('../../../../packages/core/dist/styles.css');
      
      /* Additional styles for demo */
      body {
        font-family: 'Inter', system-ui, sans-serif;
      }
    </style>
  </head>
  <body class="min-h-screen bg-white text-gray-900">
    <header class="border-b border-gray-200">
      <div class="w-full px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center">
            <h1 class="text-xl font-bold text-gray-900">Bootstrap AI</h1>
          </div>
          <nav class="hidden md:flex space-x-8">
            <a href="/" class="text-gray-500 hover:text-gray-900">Home</a>
            <a href="/components" class="text-gray-500 hover:text-gray-900">Components</a>
            <a href="/themes" class="text-gray-500 hover:text-gray-900">Themes</a>
            <a href="/guides" class="text-gray-500 hover:text-gray-900">Guides</a>
          </nav>
        </div>
      </div>
    </header>
    
    <main class="w-full px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>
    
    <footer class="border-t border-gray-200 mt-16">
      <div class="w-full px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center text-gray-500">
          <p>&copy; 2024 Bootstrap AI. Built with Astro and Web Components.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
